        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "description": "Id of Tenant",
            "type": "string",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Tenant",
            "schema": {
              "$ref": null
            }
          }
