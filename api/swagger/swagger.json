          {
            "name": "search",
            "description": "Text Search String",
            "type": "string",
            "in": "query",
            "required": false
          },
          {
            "name": "page",
            "description": "Page Number ( 0 index based )",
            "type": "integer",
            "format": "int64",
            "required": false
          },
          {
            "name": "size",
            "description": "Page Size - default 10",
            "type": "integer",
            "format": "int64",
            "required": false
          }
        ],
        "responses": {
          "200": {
